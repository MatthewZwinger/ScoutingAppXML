<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="matthewzwinger.scoutingappxml.MainActivity"
    tools:showIn="@layout/activity_main"
    android:addStatesFromChildren="false"
    >


    <ToggleButton
        android:textOff="No        Reach"
        android:textOn="Reach"
        android:textSize="20dp"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_height="80dp"
        android:layout_width="150dp"/>

    <EditText
        android:text="Comments"
        android:gravity="center"
        android:textSize="28dp"
        android:layout_rowSpan="2"
        android:layout_rowWeight="2"
        android:layout_column="1"
        android:layout_columnWeight="2"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:layout_height="140dp"
        android:layout_width="250dp"
        android:layout_gravity="center|top"
        />

    <ToggleButton
        android:textOn="Autonomous Successful"
        android:textOff="Autonomous Failure "
        android:layout_column="3"
        android:layout_row="0"
        android:textSize="18dp"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:textColorHint="#000000"
        />

    <ToggleButton
        android:textOff="No         Preload"
        android:textOn="preload"
        android:textSize="20dp"
        android:layout_height="80dp"
        android:layout_width="150dp"
        android:layout_column="0"
        android:layout_row="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Defense Crosses"
        android:layout_columnWeight="2"
        android:layout_columnSpan="2"
        android:id="@+id/textView"
        android:layout_row="2"
        android:layout_column="1"
        android:gravity="center|bottom"/>

    <ToggleButton
        android:textOff="Not        Spybot"
        android:textOn="SpyBot"
        android:layout_height="80dp"
        android:layout_width="150dp"
        android:textSize="20dp"
        android:layout_gravity="right"
        android:layout_column="3"
        android:layout_row="1"/>

    <ToggleButton
        android:layout_width="135dp"
        android:layout_height="120dp"
        android:textSize="15dp"
        android:id="@+id/button"
        android:layout_row="3"
        android:layout_column="0"
        android:textOn="Portcullis"
        android:textOff="No Portcullis"
        android:layout_gravity="right"
        android:onClick="#000000"/>

    <ToggleButton
        android:textOff="No                 Moat"
        android:textOn="Moat"
        android:layout_width="135dp"
        android:layout_height="120dp"
        android:textSize="15dp"
        android:id="@+id/button2"
        android:layout_row="3"
        android:layout_column="1" />

    <ToggleButton
        android:textOff="No         Drawbridge"
        android:textOn="Drawbridge"
        android:layout_height="120dp"
        android:layout_width="135dp"
        android:textSize="15dp"
        android:layout_row="3"
        android:layout_column="2"/>

    <ToggleButton
        android:textOff="No         Rockwall"
        android:textOn="Rockwall"
        android:layout_height="120dp"
        android:layout_width="135dp"
        android:textSize="15dp"
        android:layout_row="3"
        android:layout_column="3" />

    <ToggleButton
        android:textOff="No Cheval De Frise"
        android:textOn="Cheval de Frise"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_height="120dp"
        android:layout_width="135dp"
        android:textSize="13dp"
        android:layout_gravity="right"/>

    <ToggleButton
        android:textOff="No         Ramparts"
        android:textOn="Ramparts"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_height="120dp"
        android:layout_width="135dp"
        android:textSize="15dp"
        />
    <ToggleButton
        android:textOff="No         Sallyport"
        android:textOn="Sallyport"
        android:textSize="15dp"
        android:layout_column="2"
        android:layout_row="4"
        android:layout_height="120dp"
        android:layout_width="135dp"/>

    <ToggleButton
        android:textOff="No                       Rough Terrain"
        android:textOn="Rough terrian"
        android:textSize="13dp"
        android:layout_column="3"
        android:layout_row="4"
        android:layout_height="120dp"
        android:layout_width="135dp" />

    <ToggleButton
        android:textOff="No Low Bar"
        android:textOn="Low Bar"
        android:textSize="20dp"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_columnWeight="2"
        android:layout_columnSpan="2"
        android:layout_height="90dp"
        />
    <Button
        android:text="Low Goal"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnWeight="2"
        android:layout_columnSpan="2"
        android:layout_height="110dp"
        android:textSize="23dp"

        />
    <ToggleButton
        android:textOff="No Tortuga"
        android:textOn="Tortuga"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_height="110dp"
        android:layout_columnWeight="2"
        android:layout_columnSpan="2"
        android:textSize="23dp"/>

    <Button
        android:text="High Goal"
        android:layout_row="6"
        android:layout_column="2"
        android:layout_columnWeight="2"
        android:layout_columnSpan="2"
        android:layout_height="110dp"
        android:textSize="23dp"/>

</GridLayout>
